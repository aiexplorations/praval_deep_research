# Core Application
APP_NAME=agentic_deep_research
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Praval Framework
PRAVAL_DEFAULT_PROVIDER=openai
PRAVAL_DEFAULT_MODEL=gpt-4o-mini
PRAVAL_MAX_THREADS=10
PRAVAL_MEMORY_ENABLED=true
PRAVAL_REEF_CAPACITY=1000

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Message Broker
RABBITMQ_URL=amqp://research_user:research_pass@localhost:5672/research_vhost
RABBITMQ_MANAGEMENT_URL=http://localhost:15672
RABBITMQ_PASSWORD=research_pass

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=research_vectors

# Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=research-papers
MINIO_SECURE=false

# Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ArXiv Configuration
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_MAX_RESULTS=50
ARXIV_RATE_LIMIT=3
ARXIV_DELAY_SECONDS=1

# Embedding Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# PDF Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_PAPER=50
PDF_EXTRACTION_METHOD=pdfplumber
PDF_DOWNLOAD_TIMEOUT=60
PDF_MAX_RETRIES=3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true